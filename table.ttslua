function loadBoardDecals(_place)
  local _decals = t_mat_decals
  if _place.custom ~= nil then
    if _place.custom.mats ~= nil then
      if _place.mat ~= 0 then
        if _place.custom.mats[_place.mat] ~= nil then
          _custom = _place.custom.mats[_place.mat]
          if _custom ~= nil then
            _decals[1].url = t_mat_stamps.exile[_custom.decal_exile or "Black"]
            _decals[2].url = t_mat_stamps.library[_custom.decal_library or "Black"]
            _decals[3].url = t_mat_stamps.grave[_custom.decal_grave or "Black"]
          end
        end
      end
    end
  end
  _place.board.setDecals(_decals)
  _place.board.setSnapPoints(_decals)
end

