mats_max = 0
m_data.mat = 0
function setMat(i)
  m_data.mat = i
  if m_board ~= nil then
    m_board.setPosition({0,0,0})
    destroyObject(m_board)
  end
  m_data.objects.board = nil
  loadBoard()
end

function change_playmat()
  max_mats = 0
  self.clearButtons()
  mb_confirm("reset_settings_module")
  if Player[m_color].host then
    self.createButton({
      click_function = "new_mat", function_owner = self, label = "New",
      position = {0,0.2,-0.5}, width = 1500, height = 400,
      color = m_color, font_size = 200
    })
  end
  if m_data.custom.mats ~= nil then
    for key, pair in ipairs(m_data.custom.mats) do
      mats_max = mats_max + 1
    end
    if mats_max > 0 then
      self.createButton({
        click_function = "next_mat", function_owner = self, label = ">",
        position = {0.8,0.2,0.5}, width = 600, height = 400,
        color = m_color, font_size = 200
      })
      self.createButton({
        click_function = "prev_mat", function_owner = self, label = "<",
        position = {-0.8,0.2,0.5}, width = 600, height = 400,
        color = m_color, font_size = 200
      })
      self.createButton({
        click_function = "edit_mat", function_owner = self, label = "Edit",
        position = {0,0.2,1.5}, width = 1500, height = 400,
        color = m_color, font_size = 200
      })
    end
  end
end

function next_mat()
  local i = m_data.mat + 1
  if i >= mats_max then i = mats_max end
  setMat(i)
end

function prev_mat()
  local i = m_data.mat - 1
  if i < 0 then i = 0 end
  setMat(i)
end

function new_mat()
  if m_data.custom.mats == nil then m_data.custom.mats = {} end
  m_data.custom.mats[max_mats + 1] = {}
  setMat(max_mats + 1)
  m_data.custom.mats[m_data.mat].image = m_board.getCustomObject().image
  self.clearButtons()
  smb_mat_switch_stamp(2)
  mb_confirm("change_playmat", 4)
end

function edit_mat()
  self.clearButtons()
  smb_mat_switch_stamp(2)
  mb_confirm("change_playmat")
  self.createButton({
    click_function = "delete_mat", function_owner = self, label = "Delete",
    position = {0,0.2,1.5}, width = 1500, height = 400,
    color = "Red", font_size = 200
  })
end

function delete_mat()
  table.remove(m_data.custom.mats, m_data.mat)
  setMat(m_data.mat - 1)
  change_playmat()
end

