function validateObject(_name, _params, _color)
  local _name = _name
  local _params = _params
  local _color = _color or 'Grey'
  if m_data[_color] == nil then print("new mat") m_data[_color] = t_mat end
  local _object = getObjectFromGUID(m_data[_color].objects[_name])

  if _object == nil then
    _object = spawnObject(_params)
    _object.setCustomObject(_params.custom)
  else
    _object.setPosition(_params.position)
    _object.setRotation(_params.rotation)
    Wait.time(function() _params.callback_function(_object) end, 0.6)
  end
  Wait.time(function() finalizeObject(_name, _object, _color) end, 0.6)
  return _object
end

function finalizeObject(_name, _obj, _color)
  m_data[_color].objects[_name] = _obj.getGUID()
end

function freezeObject(_obj)
  _obj.interactable = false
  _obj.setLock(true)
  --_obj.setColorTint(t.name)
end

function allBut(_color)
  local players = {}
  for key, color in pairs(Color.list) do
    if color ~= _color then
      table.insert(players,color)
    end
  end
  return players
end

-- Field utility functions

function count_hand(_color)
  local handObjects = Player[_color].getHandObjects(1)
  local objectCount = 0 --set to -1 because an object is still counted as being in hand when it leaves the zone
  for j, obj in ipairs(handObjects) do
      if obj.tag == "Card" then
          objectCount = objectCount+1
      end
  end
  return objectCount
end

function get_deck(_color)
  local objects = m_place[_color].z_library.getObjects()
  for key, object in pairs(objects) do
    if object.tag == 'Deck' then
      return object
    end
  end
  return nil
end

function draw(_i, _color)
  local deck = get_deck(_color)
  if deck == nil then
    broadcastToColor("No deck in library slot", _color)
    return false
  end
  deck.deal(_i, _color, 1)
  return true
end

