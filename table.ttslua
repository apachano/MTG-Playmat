function resize()
  local playerList = Player.getPlayers()
  local i = 0
  for _, playerReference in ipairs(playerList) do
    i = i + 1
  end
  i = math.ceil(i/2) - 1
  for j = m_data.table_size, i do
    extend()
  end
end

function extend()
  if m_data.table_size >= 5 then return end
  m_data.table_size = m_data.table_size + 1
  if m_data.table_size % 2 == 1 then
    self.setPosition({0,12,0})
    setBags((m_data.table_size * 24))
    setCannon((-m_data.table_size * 24))
  else
    self.setPosition({45/2,12,0})
    setBags((m_data.table_size * 24) + 45/2)
    setCannon((-m_data.table_size * 24) + 45/2)
  end
  self.setScale({8,6.75,1+(2.3 * m_data.table_size)})

  setPlace(1)
  setPlace(2)
end

function init()
  resize()
end

function reset()
  m_data = t_data
  init()
end

